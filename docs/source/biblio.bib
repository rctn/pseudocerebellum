   title = {Deep Cerebellar Nuclei Rebound Firing In Vivo: Much Ado About Almost Nothing?},
   year = {2016},
}


@article{Steuber2016,
   abstract = {Many experimental and theoretical studies have investigated information processing in the cerebellar cortex. However, all nonvestibular output from the cerebellar cortex has to be processed by the cerebellar nuclei (CN) before it can affect other brain structures, and the generation of output by the CN is not well understood. In particular, there is no consensus about the effect of the inhibitory Purkinje cell input on the spike patterns in the CN. Four different forms of CN spike modulation by Purkinje cell input have been suggested: a simple inversion of Purkinje cell spike rates by the CN, rebound responses after cessation of inhibitory Purkinje cell input, time-locking of CN spikes to synchronized Purkinje cell spikes, and the decoding of irregular Purkinje cell input based on short-term depression at Purkinje cell synapses. This chapter summarizes computer simulation studies that have investigated these four forms of CN spike modulation by Purkinje cell input.},
