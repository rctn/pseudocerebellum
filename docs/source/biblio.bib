}
@article{Wagner2020,
   abstract = {Although classically thought of as a motor circuit, the cerebellum is now understood to contribute to a wide variety of cognitive functions through its dense interconnections with the neocortex, the center of brain cognition. Recent investigations have shed light on the nature of cerebellar cognitive processing and information exchange with the neocortex. We review findings that demonstrate widespread reward-related cognitive input to the cerebellum, as well as new studies that have characterized the codependence of processing in the neocortex and cerebellum. Together, these data support a view of the neocortex–cerebellum circuit as a joint dynamic system both in classical sensorimotor contexts and reward-related, cognitive processing. These studies have also expanded classical theory on the computations performed by the cerebellar circuit.},
